<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputHesabJadid"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextHesabJadid"
            android:singleLine="true"
            android:inputType="text"
            android:gravity="right"
            android:hint="نام حساب جدید"
            android:drawableLeft="@drawable/accunt"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputMojodiJadid"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextMojodiJadid"
            android:singleLine="true"
            android:inputType="number"
            android:gravity="right"
            android:hint="موجودی جدید"
            android:drawableLeft="@drawable/money"
            />

    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_OK"
        android:src="@drawable/ok"
        android:layout_weight=".5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_Cancel"
        android:src="@drawable/cancell"
        android:layout_weight=".5"
        />

    </LinearLayout>

</android.widget.LinearLayout>
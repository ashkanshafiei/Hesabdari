<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#EEE"
            app:cardCornerRadius="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="گزارش درآمدها و هزینه ها"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:id="@+id/txt_kol"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="موجودی کل :"
                        android:textSize="18dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/colorgori"
                        android:padding="10dp"
                        android:id="@+id/txt_daramad"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/colorgori"
                        android:text="مجموع درآمد :"
                        android:textSize="18dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/fab_hazine"
                        android:padding="10dp"
                        android:id="@+id/txt_hazine"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/fab_hazine"
                        android:text="مجموع هزینه ها :"
                        android:textSize="18dp"
                        />

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#EEE"
            app:cardCornerRadius="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="گزارشگیری از حساب"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:hint="از تاریخ"
                        android:textColorHint="#FFF"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/btn_azTarikh"
                        />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:hint="تا تاریخ"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/btn_tzTarikh"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:hint="نام حساب"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/btn_hesab"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="@color/colorgori"
                    android:hint="نمایش گزارش"
                    android:textColorHint="#FFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/btn_namayesh"
                    android:layout_gravity="right"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:padding="10dp"
                            android:id="@+id/txt_kol_hesab"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="موجودی کل :"
                            android:textSize="18dp"
                            android:visibility="invisible"
                            android:id="@+id/txt_hesab_kol" />
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textColor="@color/colorgori"
                            android:padding="10dp"
                            android:id="@+id/txt_hesab_daramad_mablagh"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/colorgori"
                            android:text="مجموع درآمد :"
                            android:textSize="18dp"
                            android:visibility="invisible"
                            android:id="@+id/txt_daramad_hesab"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textColor="@color/fab_hazine"
                            android:padding="10dp"
                            android:id="@+id/txt_hesab_hazine_mablagh"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/fab_hazine"
                            android:text="مجموع هزینه ها :"
                            android:textSize="18dp"
                            android:visibility="invisible"
                            android:id="@+id/txt_hesab_hazine"
                            />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#EEE"
            app:cardCornerRadius="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="گزارشگیری از تراکنش ها"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:hint="از تاریخ"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/btn_azTarikh_tarakonesh"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:hint="تا تاریخ"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/btn_tzTarikh_tarakonesh"
                    />


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/radioG"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:buttonTint="@color/colorgori"
                        android:text="درآمد"
                        android:textSize="16dp"
                        android:id="@+id/radioD"
                        android:textColor="@color/colorgori"/>
                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:buttonTint="@color/fab_hazine"
                        android:text="هزینه"
                        android:textSize="16dp"
                        android:id="@+id/radioH"
                        android:textColor="@color/fab_hazine"/>

                </RadioGroup>
                
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recycler_view"
                    android:padding="10dp"
                    >


                </android.support.v7.widget.RecyclerView>

            </LinearLayout>



        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>